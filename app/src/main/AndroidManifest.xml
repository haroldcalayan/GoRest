<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.haroldcalayan.gorest">

    <application
        android:name=".GoRestApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_gorest"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_gorest"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoRest">
        <activity
            android:name=".ui.splash.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.GoRest.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity">
        </activity>
        <activity
            android:name=".ui.main.user.master.UserMasterActivity"
            android:theme="@style/Theme.GoRest.NoActionBar">
        </activity>
        <activity
            android:name=".ui.main.user.detail.UserDetailActivity"
            android:theme="@style/Theme.GoRest.NoActionBar">
        </activity>
        <activity
            android:name=".ui.main.product.category.ProductCategoryActivity">
        </activity>
    </application>

</manifest>